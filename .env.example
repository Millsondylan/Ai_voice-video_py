# VLM Provider Configuration
VLM_PROVIDER=together
VLM_MODEL=arcee_ai/arcee-spotlight
VLM_API_KEY=your_api_key_here
TOGETHER_API_KEY=your_api_key_here

# Vosk Model Path
VOSK_MODEL_PATH=models/vosk-model-small-en-us-0.15

# Session Storage
GLASSES_SESSION_ROOT=~/GlassesSessions

# Optional: Audio Configuration Overrides
# GLASSES_MIC_DEVICE_NAME=MacBook Pro Microphone
# GLASSES_SAMPLE_RATE_HZ=16000
# GLASSES_CHUNK_SAMPLES=320
# GLASSES_VAD_AGGRESSIVENESS=2
# GLASSES_PRE_ROLL_MS=300
# GLASSES_SILENCE_MS=1200
# GLASSES_MAX_SEGMENT_S=45
# GLASSES_WAKE_SENSITIVITY=0.65
# GLASSES_TTS_RATE=175

# ============================================================================
# Porcupine Wake Word Detection (Primary, with Vosk Fallback)
# ============================================================================
# Get your free access key from: https://console.picovoice.ai
# If not set, will automatically fall back to Vosk STT-based detection
PORCUPINE_ACCESS_KEY=your_porcupine_access_key_here

# Optional: Path to custom .ppn wake word model
# Train custom wake words at: https://console.picovoice.ai
# GLASSES_PORCUPINE_KEYWORD_PATH=models/hey-glasses_en_mac.ppn

# Optional: Porcupine sensitivity (0.0-1.0, higher = more triggers)
# GLASSES_PORCUPINE_SENSITIVITY=0.65

# Optional: Prefer Porcupine over Vosk (true/false)
# GLASSES_PREFER_PORCUPINE=true
